TARGETS := graphics1
OBJECTS := graphics1.o
CXXFLAGS := -Wall
LDFLAGS := -lglut -lGLU -lGL
UNAME := $(shell uname)

ifeq ($(UNAME), Darwin)
# OS X specific options
LDFLAGS := -framework OpenGL -framework GLUT 
endif

all: $(TARGETS)

check: $(TARGETS)
	./graphics1

graphics1: $(OBJECTS)
	$(CXX) $(CXXFLAGS) -o $@ $^ $(LDFLAGS)

graphics1.o: graphics1.cpp

clean:
	-rm -f *~
	-rm -f $(TARGETS)
	-rm -f *.o

